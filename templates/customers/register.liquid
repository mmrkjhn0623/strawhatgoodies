<div class="top-banner">
  <div class="inner-container login">
    <img src="{{ 'ssrco_classic_tee_two_models_101010_01c5ca27c6_front_square_three_quarter_1000x1000-removebg-preview 1.png' | asset_url  }}" style="margin-top:90px;width:100%;max-width:593px;"/>
  <div class="login-page">
  <div id="template">

  {% comment %}
    Recover Password Form
  {% endcomment %}


  <div id="create-customer">
	    <div class="template_header">
	      <h2 class="title">Create Account</h2>
	    </div>

	    {% form 'create_customer' %}
	      {{ form.errors | default_errors }}
          <input type="hidden" name="return_to" value="/account">
	      <div class="clearfix large_form">
	        <label for="first_name" class="login">First Name</label>
	        <input type="text" value="" name="customer[first_name]" id="first_name" class="large" size="30" />
	      </div>

	      <div class="clearfix large_form">
	        <label for="last_name" class="login">Last Name</label>
	        <input type="text" value="" name="customer[last_name]" id="last_name" class="large" size="30" />
	      </div>

	      <div class="clearfix large_form">
	        <label for="email" class="login">Email Address</label>
	        <input type="email" value="" name="customer[email]" id="email" class="large" size="30" />
	      </div>

	      <div class="clearfix large_form" style="margin-bottom: 12px;">
	        <label for="password" class="login">Password</label>
	        <input type="password" value="" name="customer[password]" id="password" class="large password" size="30" />
	      </div>

	      <div class="action_bottom">
	        <input class="btn" type="submit" value="Create" />
	      </div>
          <p id="signup" style="margin-top:20px;">
            Already a user? <a href="/account/login">Sign In</a>.
          </p>
	    {% endform %}
  </div>


  {% comment %}
    Guest Login form for shops with optional customer accounts. This form is displayed only when users click on the checkout link
    on the cart page.
  {% endcomment %}

  {% if shop.checkout.guest_login %}
  <div id="guest">
    <div class="template_header">
      <h3 class="title">Guest Login</h3>
    </div>
    {% form 'guest_login' %}
      <input class="btn" type="submit" value="Continue as Guest" />
    {% endform %}
  </div>
  {% endif %}
</div>
                    </div>
                </div>
            </div>


